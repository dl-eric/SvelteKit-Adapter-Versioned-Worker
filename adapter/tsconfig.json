{
	"include": [
		"./index.ts",
		"./src"
	],
	"exclude": [
		"./static"
	],
	"compilerOptions": {
		"target": "es2021",
		"module": "ESNext",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "build",
		"declarationMap": true,

		"paths": {
			"sveltekit-adapter-versioned-worker/internal/worker-shared": ["./src/worker/shared"],
			"sveltekit-adapter-versioned-worker/internal/worker-util-alias": ["./src/worker/util"]
		}
	}
}